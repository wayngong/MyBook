<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/search_text_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/search_text"
            android:layout_width="@dimen/search_text_width"
            android:layout_height="@dimen/search_text_height"
            android:layout_margin="@dimen/book_item_padding"
            android:paddingLeft="@dimen/book_item_padding"
            android:paddingRight="@dimen/book_item_padding"
            android:hint="@string/hint_search_text"
            android:textColorHint="@color/colorSearchText"
            android:textColor="@color/colorSearchText"
            android:background="@color/colorSearchBackground"/>
        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_button_height"
            android:layout_gravity="center_vertical"
            android:text="@string/button_text"/>
    </LinearLayout>

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/book_list"/>
</LinearLayout>
